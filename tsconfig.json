{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/Types"],

    // Absolute imports (new 2025 way â€” no more deprecated baseUrl/paths warning)
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Silence the deprecation warning until TS 7.0 is stable (safe & recommended)
    "ignoreDeprecations": "6.0",

    // This kills the verbatimModuleSyntax error
    "verbatimModuleSyntax": false
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules", "dist"]
}